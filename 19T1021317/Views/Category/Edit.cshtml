@model _19T1021317.DomainModels.Category
@using _19T1021317.BusinessLayers;

<div class="box box-primary">
    <div class="box-body">
        <form action="~/category/save" method="post" class="form-horizontal">
            @Html.AntiForgeryToken() <!--Chỉ thị mã hóa tránh fake dữ liệu-->


            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" id="CategoryID" name="CategoryID" value="@Model.CategoryID">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="categoryName">Category Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="CategoryName" class="form-control" id="categoryName" value="@Model.CategoryName" placeholder="Enter Category Name" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="description">
                    Description:
                </label>
                <div class="col-sm-10">
                    <textarea name="Description" class="form-control" id="description" value="@Model.Description" style="min-height: 160px; resize: vertical" placeholder="Enter description"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Save
                    </button>

                    <a href="~/category" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>