<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="categoryName">Category Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="categoryName" class="form-control" id="categoryName" placeholder="Enter Category Name" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="description">
                    Description:
                </label>
                <div class="col-sm-10">
                    <textarea name="description" class="form-control" id="description" style="min-height: 160px; resize: vertical" placeholder="Enter description"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Save
                    </button>

                    <a href="~/category" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>