@model _19T1021317.Webs.Models.CustomerSearchOutput
@{ Layout = null; }

<table class="table table-bordered table-hover table-striped">
    <thead class="bg-primary">
        <tr>
            <th>Customer Name</th>
            <th>Contact Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Country</th>
            <th>City</th>
            <th>Postal Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td class="text-right">
                    <a href="~/customer/edit/@item.CustomerID" class="btn btn-success" title="Edit">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="~/customer/delete/@item.CustomerID" class="btn btn-danger" title="Remove">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-sm-5">
        <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">Showing @Model.From to @Model.To of @Model.TotalItems entries</div>
    </div>
    <div class="col-sm-7">
        <div class="dataTables_paginate paging_simple_numbers" style="margin: 0;text-align: center">
            <ul class="pagination">
                <li class="paginate_button previous @(Model.Page == 1 ? "disabled" : "")" id="example2_previous">
                    @if (Model.Page == 1)
                    {
                        <a href="#" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a>
                    }
                    else
                    {
                        <a href="~/customer?page=@(Model.Page - 1)&searchValue=@Model.SearchValue" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a>
                    }
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="paginate_button active">
                            <a href="#" aria-controls="example2" data-dt-idx="@i" tabindex="0">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="paginate_button">
                            <a href="~/customer?page=@i&searchValue=@Model.SearchValue" aria-controls="example2" data-dt-idx="@i" tabindex="0">@i</a>
                        </li>
                    }
                }
                <li class="paginate_button next @(Model.Page == Model.PageCount ? "disabled" : "")" id="example2_next">
                    @if (Model.Page == Model.PageCount)
                    {
                        <a href="#" aria-controls="example2" data-dt-idx="@Model.PageCount" tabindex="0">Next</a>
                    }
                    else
                    {
                        <a href="~/customer?page=@(Model.Page + 1)&searchValue=@Model.SearchValue" aria-controls="example2" data-dt-idx="0" tabindex="0">Next</a>
                    }
                </li>
            </ul>
        </div>
    </div>
</div>