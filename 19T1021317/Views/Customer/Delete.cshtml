@model dynamic

@{
    ViewBag.Title = "Remove Customer";
}


<div class="box box-danger">
    <div class="box-title">
        <h3 style="padding-left: 24px">Are you sure you want to remove this customer?</h3>
    </div>
    <div class="box-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Customer Name:</label>
                <p class="col-sm-10 form-control-static">
                    John Doe
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Contact Name:</label>
                <p class="col-sm-10 form-control-static">
                    Google
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Address:</label>
                <p class="col-sm-10 form-control-static">
                    25, Le Duan, District 1, Ho Chi Minh City
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <p class="col-sm-10 form-control-static">
                    vokimtrivkt@gmail.com
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Country:</label>
                <p class="col-sm-10 form-control-static">
                    Vietnam
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">City:</label>
                <p class="col-sm-10 form-control-static">
                    Ho Chi Minh City
                </p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Postal Code:</label>
                <p class="col-sm-10 form-control-static">
                    720000
                </p>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Remove
                    </button>

                    <a href="~/customer" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>