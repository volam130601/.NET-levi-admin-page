@model _19T1021317.DomainModels.Customer
@using _19T1021317.BusinessLayers;

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/save" method="post" class="form-horizontal">
            @Html.AntiForgeryToken() <!--Chỉ thị mã hóa tránh fake dữ liệu-->

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" id="CustomerID" name="CustomerID" value="@Model.CustomerID">
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="customerName">Customer Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="CustomerName" class="form-control" id="customerName" value="@Model.CustomerName" placeholder="Enter Customer Name" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="contactName">Contact Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="ContactName" class="form-control" id="contactName" value="@Model.ContactName" placeholder="Enter Contact Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Address">Address:</label>
                <div class="col-sm-10">
                    <input type="text" name="Address" class="form-control" id="Address" value="@Model.Address" placeholder="Enter Address">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <input type="email" name="Email" class="form-control" id="email" value="@Model.Email" placeholder="Enter Email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="country">Country:</label>
                <div class="col-sm-10">
                    <select name="Country" id="country" class="form-control">
                        <option value=""> -- Choose Country -- </option>
                        @foreach (var item in _19T1021317.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">
                                    @item.CountryName
                                </option>
                            }

                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="city">City:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="City" name="City" value="@Model.City">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="postalCode">Postal Code:</label>
                <div class="col-sm-10">
                    <input type="text" name="PostalCode" class="form-control" id="postalCode"  value="@Model.PostalCode" placeholder="Enter Postal Code">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Save
                    </button>

                    <a href="~/customer" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>