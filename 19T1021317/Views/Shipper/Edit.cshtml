@model _19T1021317.DomainModels.Shipper
@using _19T1021317.Webs.Codes

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/save" method="post" class="form-horizontal">
            @Html.AntiForgeryToken() <!--Chỉ thị mã hóa tránh fake dữ liệu-->

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" id="ShipperId" name="ShipperId" value="@Model.ShipperId">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="shipperName">Category Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="ShipperName" class="form-control" id="shipperName" value="@Model.ShipperName" placeholder="Enter Category Name" autofocus>
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="phone">
                    Phone:
                </label>
                <div class="col-sm-10">
                    <input type="text" name="Phone" class="form-control" id="phone" value="@Model.Phone" placeholder="Enter phone">
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Save
                    </button>

                    <a href="~/shipper" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>