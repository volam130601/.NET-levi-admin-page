@model _19T1021317.DomainModels.OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/UpdateDetail" method="post" class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(detail => detail.OrderDetailID)
            @Html.HiddenFor(detail => detail.ProductID)
            @Html.HiddenFor(detail => detail.OrderID)
            @Html.HiddenFor(detail => detail.Unit)
            @Html.HiddenFor(detail => detail.Photo)
            @Html.HiddenFor(detail => detail.ProductName)
            @Html.HiddenFor(detail => detail.TotalPrice)
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.ProductName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.Unit</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" value="@Model.Quantity" name="Quantity" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" value="@Model.SalePrice" name="SalePrice" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

